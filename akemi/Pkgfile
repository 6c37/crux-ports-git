# Description: An X window virtual filesystem.
# URL:         https://github.com/6c37/akemi
# Packager:    arcetera, arc at plusreed dot com
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  git fuse xorg-libxcb

name=akemi
version=git
release=1
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master;
	else
		git clone https://github.com/6c37/akemi.git -b master
		cd $name
	fi
	
	mkdir -p $PKG/usr/bin

	make
	make PREFIX=$PKG/usr install
}
