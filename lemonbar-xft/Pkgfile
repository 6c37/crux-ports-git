# Description: A featherweight, lemon-scented bar based on xcb with xft support.
# URL:         https://github.com/krypt-n/bar
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports-git/issues
# Depends on:  xorg-libxcb

name=lemonbar-xft
version=git
release=2
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/xft-port
	else
		git clone https://github.com/krypt-n/bar -b xft-port $name
		cd $name
	fi

	make all doc
	install -Dm755 lemonbar   $PKG/usr/bin/lemonbar
	install -Dm644 lemonbar.1 $PKG/usr/share/man/man1/lemonbar.1
}
