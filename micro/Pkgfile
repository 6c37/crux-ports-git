# Description: A modern and intuitive terminal-based text editor.
# URL:         https://github.com/zyedidia/micro
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports-git/issues
# Depends on:  go
# Optional:    xclip xsel python3-pyflakes goimports golint misspell

name=micro
version=git
release=1
source=()

download_git() {
	if [[ -d $PKGMK_SOURCE_DIR/$name ]]; then
		git -C $PKGMK_SOURCE_DIR/$name fetch --depth=1
		git -C $PKGMK_SOURCE_DIR/$name clean -f
		git -C $PKGMK_SOURCE_DIR/$name reset --hard origin/$2
	else
		git -C $PKGMK_SOURCE_DIR clone --depth=1 $1 -b $2 $name
	fi

	cp -r $PKGMK_SOURCE_DIR/$name $PKGMK_WORK_DIR/src/$name
}

build() {
	download_git https://github.com/zyedidia/$name master
	cd $name

	export GOPATH=$(pwd)
	export GOBIN=$GOPATH/bin

	# More verbose building
	sed -i "s/go get/go get -v/" Makefile
	sed -i "s/go build/go build -v/" Makefile

	make install-all
	install -Dm755 bin/micro $PKG/usr/bin/micro
}
