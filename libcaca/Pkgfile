# Description: Color AsCii Art library.
# URL:         http://caca.zou.org/wiki/libcaca
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports-git/issues
# Depends on:

name=libcaca
version=git
release=1
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard
	else
		git clone https://github.com/cacalabs/$name $name
		cd $name
	fi

	./bootstrap
	./configure --prefix=/usr \
		--enable-shared \
		--disable-csharp \
		--disable-doc \
		--disable-cxx \
		--disable-gl \
		--disable-static

	make
	make DESTDIR=$PKG PREFIX=/usr install
}
