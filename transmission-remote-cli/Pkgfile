# Description: Curses interface for the daemon of the BitTorrent client Transmission. (git checkout)
# URL:         https://github.com/fagga/transmission-remote-cli
# Packager:    wildefyr, wildefur at gmail dot com
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  git transmission

name=transmission-remote-cli
version=git
release=1
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone git://github.com/fagga/transmission-remote-cli -b master $name
		cd $name
	fi

	install -Dm755 transmission-remote-cli $PKG/usr/bin/transmission-remote-cli
	install -Dm644 transmission-remote-cli.1 $PKG/usr/share/man/man1/transmission-remote-cli.1
}
