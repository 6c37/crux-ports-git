# Description: Adjusts the color temperature of your screen according to your surroundings.
# URL:         http://jonls.dk/redshift/
# Packager:    Michael Savage, mike at mikejsavage dot co dot uk
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  libdrm xorg-libxcb xorg-libxxf86vm

name=redshift
version=git
release=1
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone https://github.com/jonls/redshift $name
		cd $name
	fi

	./bootstrap
	./configure --disable-nls --disable-gui --disable-ubuntu

	make
	make prefix="/usr/" DESTDIR=${PKG} install
}
