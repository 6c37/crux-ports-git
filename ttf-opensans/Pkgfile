# Description: A humanist sans-serif font.
# URL:         https://www.google.com/fonts/specimen/Open+Sans
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports-git/issues
# Depends on:

name=ttf-opensans
version=git
release=1
source=(
	https://github.com/google/fonts/raw/master/apache/opensans/OpenSans-Light.ttf
	https://github.com/google/fonts/raw/master/apache/opensans/OpenSans-LightItalic.ttf
	https://github.com/google/fonts/raw/master/apache/opensans/OpenSans-Regular.ttf
	https://github.com/google/fonts/raw/master/apache/opensans/OpenSans-Italic.ttf
	https://github.com/google/fonts/raw/master/apache/opensans/OpenSans-Semibold.ttf
	https://github.com/google/fonts/raw/master/apache/opensans/OpenSans-SemiboldItalic.ttf
	https://github.com/google/fonts/raw/master/apache/opensans/OpenSans-Bold.ttf
	https://github.com/google/fonts/raw/master/apache/opensans/OpenSans-BoldItalic.ttf
	https://github.com/google/fonts/raw/master/apache/opensans/OpenSans-ExtraBold.ttf
	https://github.com/google/fonts/raw/master/apache/opensans/OpenSans-ExtraBoldItalic.ttf
)

build() {
	 install -Dm644 OpenSans-Light.ttf           $PKG/usr/share/fonts/X11/TTF/OpenSans/Light.ttf
	 install -Dm644 OpenSans-LightItalic.ttf     $PKG/usr/share/fonts/X11/TTF/OpenSans/LightItalic.ttf
	 install -Dm644 OpenSans-Regular.ttf         $PKG/usr/share/fonts/X11/TTF/OpenSans/Regular.ttf
	 install -Dm644 OpenSans-Italic.ttf          $PKG/usr/share/fonts/X11/TTF/OpenSans/Italic.ttf
	 install -Dm644 OpenSans-Semibold.ttf        $PKG/usr/share/fonts/X11/TTF/OpenSans/Semibold.ttf
	 install -Dm644 OpenSans-SemiboldItalic.ttf  $PKG/usr/share/fonts/X11/TTF/OpenSans/SemiboldItalic.ttf
	 install -Dm644 OpenSans-Bold.ttf            $PKG/usr/share/fonts/X11/TTF/OpenSans/Bold.ttf
	 install -Dm644 OpenSans-BoldItalic.ttf      $PKG/usr/share/fonts/X11/TTF/OpenSans/BoldItalic.ttf
	 install -Dm644 OpenSans-ExtraBold.ttf       $PKG/usr/share/fonts/X11/TTF/OpenSans/ExtraBold.ttf
	 install -Dm644 OpenSans-ExtraBoldItalic.ttf $PKG/usr/share/fonts/X11/TTF/OpenSans/ExtraBoldItalic.ttf
}
