# Description: F? Virtual Window Manager for X11.
# URL:         http://fvwm.org/
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports-git/issues
# Depends on:  git xorg-server

name=openbox
version=git
release=3
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone git://git.$name.org/mikachu/$name $name
		cd $name
	fi

	./bootstrap
	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--disable-imlib2 \
		--disable-librsvg \
		--disable-session-management \
		--disable-xkb \
		--disable-xinerama \
		--disable-xsync \
		--disable-nls

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/doc/openbox
}
