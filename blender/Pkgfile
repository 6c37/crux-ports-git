# Description: A fully integrated 3D graphics creation suite. (git checkout)
# URL:         http://blender.org/
# Packager:    onodera, onodera at openmailbox dot org
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  boost cmake desktop-file-utils ffmpeg fftw glew glu openimageio python3
# Optional:    cuda

name=blender
version=git
release=1
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone git://git.blender.org/blender.git $name
		cd $name
	fi

	if cd build; then
		cd ..
		rm -r build
		mkdir build
	else
		mkdir build
	fi
	cd build
	cmake ../ \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DPYTHON_VERSION=3.4m \
		-DWITH_INSTALL_PORTABLE=OFF \
		-DWITH_CYCLES=ON \
		-DWITH_CYCLES_CUDA_BINARIES=ON \
		-DWITH_CYCLES_OSL=ON \
		-DWITH_MOD_OCEANSIM=ON \
		-DWITH_CODEC_FFMPEG=ON \
		-DWITH_FFTW3=ON \
		-DWITH_OPENIMAGEIO=ON \
		-DWITH_SYSTEM_OPENJPEG=ON \
		-DWITH_INTERNATIONAL=OFF \
		-DWITH_OPENAL=OFF \
		-DWITH_PLAYER=OFF \
		-DWITH_OPENCOLORIO=OFF \
		-DWITH_GAMEENGINE=OFF \
		-DWITH_PYTHON_INSTALL=OFF

	make
	make DESTDIR=$PKG install
}
