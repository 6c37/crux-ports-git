# Description: Fish shell like syntax highlighting for Zsh.
# URL:         https://github.com/zsh-users/zsh-syntax-highlighting
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  zsh

name=zsh-syntax-highlighting
version=git
release=2
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q
		git reset --had origin/master
	else
		git clone git://github.com/zsh-users/$name
		cd $name
	fi

	make
	make PREFIX=/usr SHARE_DIR=$PKG/usr/share/zsh/plugins/$name DESTDIR=$PKG install
}
