# Description: Image viewer for Wayland and X11. (git checkout)
# URL:         http://github.com/eXeC64/imv
# Packager:    onodera, onodera at openmailbox dot org
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports-git/issues
# Depends on:  git freeimage sld2_ttf

name=pqiv
version=git
release=1
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone git://github.com/eXeC64/imv.git $name
		cd $name
	fi

	make
	make DESTDIR=$PKG install
}
