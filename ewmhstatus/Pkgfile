# Description: Outputs the current EWMH desktop name and window title.
# URL:         https://github.com/baskerville/ewmhstatus
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports-git/issues
# Depends on:  git xorg-libxcb xorg-xcb-util-wm cairo

name=ewmhstatus
version=git
release=1
source=()

download_git() {
	if [[ -d $PKGMK_SOURCE_DIR/$name ]]; then
		git -C $PKGMK_SOURCE_DIR/$name fetch --depth=1
		git -C $PKGMK_SOURCE_DIR/$name clean -f
		git -C $PKGMK_SOURCE_DIR/$name reset --hard origin/$2
	else
		git -C $PKGMK_SOURCE_DIR clone --depth=1 $1 -b $2 $name
	fi

	cp -r $PKGMK_SOURCE_DIR/$name $PKGMK_WORK_DIR/src/$name
}

build() {
	download_git https://github.com/baskerville/$name master
	cd $name

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone https://github.com/baskerville/$name $name
		cd $name
	fi

	make
	make PREFIX=/usr DESTDIR=$PKG install
}
