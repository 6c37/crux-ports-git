# Description: F? Virtual Window Manager for X11.
# URL:         http://fvwm.org/
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports-git/issues
# Depends on:  git imlib2

name=fvwm
version=git
release=2
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone https://github.com/ThomasAdam/$name $name
		cd $name
	fi

	aclocal
	autoheader
	automake --add-missing
	autoreconf
	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--disable-gtk \
		--disable-perllib \
		--disable-bidi \
		--disable-nls

	make
	make DESTDIR=$PKG install
}
