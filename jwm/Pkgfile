# Description: A lightweight window manager for the X11 Window System. (git checkout)
# URL:         http://fvwm.org/
# Packager:    onodera, onodera at openmailbox dot org
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports-git/issues
# Depends on:  git xorg-libx11

name=jwm
version=git
release=4
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone git://github.com/joewing/jwm $name
		cd $name
	fi

	./autogen.sh
	./configure \
		--prefix=/usr \
		--disable-cairo \
		--disable-jpeg \
		--disable-png \
		--disable-rsvg \
		--disable-iconv \
		--disable-nls

	make
	make DESTDIR=$PKG install
}
