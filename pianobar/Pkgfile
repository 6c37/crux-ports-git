# Description:  Console-based pandora.com player
# URL:          http://6xq.net/projects/pianobar/
# Packager:     Ethan Smith, esmth at openmailbox dot org
# Maintainer:   6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:   git	json-c libao 

name=pianobar
version=git
release=1
source=()

build() {
        cd $PKGMK_SOURCE_DIR

				if cd $name; then
								git fetch -q; git reset --hard origin/master
				else
								git clone git://github.com/PromyLOPh/pianobar.git
								cd $name
				fi

				#patch -p1 < "$SRC/fix_compiler_name.patch"

        make
        make DESTDIR="$PKG" PREFIX="/usr" MANDIR="/usr/share/man" install
}
