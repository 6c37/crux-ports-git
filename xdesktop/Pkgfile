# Description: A tool that outputs X virtual desktop numbers.
# URL:         https://github.com/onodera-punpun/xdesktop
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports-git/issues
# Depends on:  xorg-xcb-util-wm

name=xdesktop
version=git
release=1
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone git://github.com/onodera-punpun/$name $name
		cd $name
	fi

	make
	make PREFIX=/usr DESTDIR=$PKG install
}
