# Description: A linter for Go source code.
# URL:         https://github.com/golang/lint
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports-git/issues
# Depends on:  go

name=golint
version=git
release=1
source=()

build() {
	export GOPATH=$(pwd)
	go get -u -v -fix github.com/golang/lint/$name

	install -Dm755 bin/golint $PKG/usr/bin/golint
}
