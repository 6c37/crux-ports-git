# Description: Wireless LAN network daemon.
# URL:         https://01.org/connman
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports-git/issues
# Depends on:  dbus gnutils glib openconnect openvpn vpnc wpa_supplicant
# Optional:    pptp bluez

name=connman
version=git
release=1
source=(rc.connmand)

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone https://git.kernel.org/pub/scm/network/$name/$name $name
		cd $name
	fi


	./bootstrap-configure
	./configure --prefix=/usr \
			--bindir=/usr/bin \
			--mandir=/usr/share/man \
			--enable-openvpn \
			--enable-client \
			--enable-polkit

	make
	make DESTDIR=$PKG install
	install -D -m 0755 $SRC/rc.connmand $PKG/etc/rc.d/connmand
}
