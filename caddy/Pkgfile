# Description: Fast, cross-platform HTTP/2 web server with automatic HTTPS.
# URL:         https://caddyserver.com
# Maintainer:  onodera, https://github.com/6c37/crux-ports-git/issues
# Depends on:  go

name=caddy
version=git
release=1
source=(
	caddy.conf
	caddy
)

build() {
	export GOPATH=$(pwd)
	go get -u -v -fix github.com/mholt/$name/$name

	install -Dm755 bin/caddy $PKG/usr/sbin/caddy
	install -Dm755 $SRC/caddy $PKG/etc/rc.d/caddy
	install -Dm644 $SRC/caddy.conf $PKG/etc/caddy/caddy.conf
}
