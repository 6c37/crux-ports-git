# Description: Extremely powerful ICCCM-compliant multiple virtual desktop window manager. (git checkout)
# URL:         https://github.com/ThomasAdam/mvwm
# Packager:    onodera, onodera at openmailbox dot org
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  git imlib2

name=mvwm
version=git
release=1
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone git://github.com/ThomasAdam/mvwm $name
		cd $name
	fi

	./autogen.sh \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--disable-gtk \
		--disable-perllib \
		--disable-bidi \
		--disable-nls

	make
	make DESTDIR=$PKG install
}
