# Description: Fetches system/theme information in terminal for Linux desktop screenshots.
# URL:         https://github.com/KittyKatt/screenFetch
# Packager:    Joe Schillinger, js1 at openmailbox dot org
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  

name=screenfetch
version=git
release=1
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone https://github.com/KittyKatt/screenFetch $name
		cd $name
	fi

	install -Dm755 screenfetch-dev $PKG/usr/bin/screenfetch
	install -Dm644 screenfetch.1 $PKG/usr/share/man/man1/screenfetch.1
}
