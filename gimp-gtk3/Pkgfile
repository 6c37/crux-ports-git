# Description: GNU Image Manipulation Program. (git checkout)
# URL:         http://gimp.org
# Packager:    Simone Rota, sip at crux dot nu
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports-git/issues
# Depends on:  git libsdl gexiv2 pygtk gegl gtk3 p5-xml-parser libmypaint
# Optional:    librsvg openexr poppler-glib

name=gimp-gtk3
version=git
release=4
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/gtk3-port
	else
		git clone git://git.gnome.org/gimp -b gtk3-port $name
		cd $name
	fi

	./autogen.sh \
			--prefix=/usr \
			--disable-static \
			--disable-gtk-doc \
			--disable-nls \
			--without-webkit \
			--without-aa \
			--without-xvfb-run

	make
	make DESTDIR=$PKG install

	ln -s /usr/bin/gimp-2.9 $PKG/usr/bin/gimp
	ln -s /usr/bin/gimp-console-2.9 $PKG/usr/bin/gimp-console

	rm -rf $PKG/usr/share/{gtk-doc,locale}
}
